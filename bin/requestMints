#!/bin/bash

source $(dirname $0)/common/init

PRIORFILE=~/.lastmintblock.request
if [[ -s $PRIORFILE ]];
then
    PRIOR=$(<$PRIORFILE)
else
    PRIOR=5198576 
fi

while getopts 'as:g' flag; do
    case "${flag}" in
        a) PRIOR=6718586 ;;
        s) PRIOR="${OPTARG}" ;;
        g) FORMAT=sheet ;;
        *) error "Unexpected option ${flag}" ;;
    esac
done

END=$(web3 "web3.eth.getBlockNumber()")

echo Checking from $PRIOR to $END inclusive

PASTE=$(node $(dirname $0)/js/fetchRequestMintEvents $PRIOR $END $FORMAT)
if [ -n "$PASTE" ]
then
    echo "$PASTE" | pbcopy
    echo "$PASTE"
    echo "(copied to clipboard)"
else
    echo No new RequestMint events
fi

echo $(( $END + 1 )) > $PRIORFILE
